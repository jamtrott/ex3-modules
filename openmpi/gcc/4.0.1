#%Module -*- tcl -*-
#
# Open MPI 4.0.1 (System gcc-7.4.0)
#
#
set version 4.0.1

proc ModulesHelp { } {
        global version
        puts stderr "\tSets up the environment for Open MPI $version (System gcc-7.4.0)\n"
	puts stderr "\t- MPI_HOME"
	puts stderr "\t- MPI_RUN"
	puts stderr "\t- PATH"
	puts stderr "\t- MANPATH"
	puts stderr "\t- LD_RUN_PATH"
	puts stderr "\t- LD_LIBRARY_PATH"
	puts stderr "\t- CPATH"
}

module-whatis "A High Performance Message Passing Library"
module-whatis "https://www.open-mpi.org"

set pkghome /cm/shared/apps/openmpi/gcc/64/$version
setenv MPI_HOME $pkghome
setenv MPI_RUN $pkghome/bin/mpirun
prepend-path PATH $pkghome/bin
prepend-path MANPATH $pkghome/share/man/
prepend-path LD_RUN_PATH $pkghome/lib64
prepend-path LD_LIBRARY_PATH $pkghome/lib64
prepend-path CPATH $pkghome/include
unset pkghome

set MSG "Open MPI $version (System gcc-7.4.0-1ubuntu1~18.04.1)"
