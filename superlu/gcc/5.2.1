#%Module
#
# SuperLU 5.2.1 (System gcc-7.4.0)
#
#
set version 5.2.1

proc ModulesHelp { } {
	global version
        puts stderr "\tSets up the environment for SuperLU $version (System gcc-7.4.0)\n"
        puts stderr "\t- SUPERLU_ROOT"
        puts stderr "\t- SUPERLU_BASE"
        puts stderr "\t- SUPERLU_INCDIR"
        puts stderr "\t- SUPERLU_LIBDIR"
        puts stderr "\t- SUPERLU_INCLUDEDIR"
        puts stderr "\t- SUPERLU_LIBRARYDIR"
        puts stderr "\t- C_INCLUDE_PATH"
        puts stderr "\t- CPLUS_INCLUDE_PATH"
        puts stderr "\t- LIBRARY_PATH"
        puts stderr "\t- LD_LIBRARY_PATH"
}

module-whatis "sets up the environment for SuperLU 5.2.1 (System gcc-7.4.0-1ubuntu1~18.04.1)"

prereq openblas/dynamic/0.3.7

set pkghome /cm/shared/apps/superlu/gcc/$version

setenv SUPERLU_ROOT $pkghome
setenv SUPERLU_BASE $pkghome
setenv SUPERLU_INCDIR $pkghome/include
setenv SUPERLU_LIBDIR $pkghome/lib
setenv SUPERLU_INCLUDEDIR $pkghome/include
setenv SUPERLU_LIBRARYDIR $pkghome/lib

prepend-path C_INCLUDE_PATH $pkghome/include
prepend-path CPLUS_INCLUDE_PATH $pkghome/include
prepend-path LIBRARY_PATH $pkghome/lib
prepend-path LD_LIBRARY_PATH $pkghome/lib

unset pkghome

set MSG "SuperLU $version (System gcc-7.4.0-1ubuntu1~18.04.1)"
