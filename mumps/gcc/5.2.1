#%Module
#
# MUMPS 5.2.1 (System gcc-7.4.0)
#
#
set version 5.2.1

proc ModulesHelp { } {
	global version
        puts stderr "\tSets up the environment for MUMPS $version (System gcc-7.4.0)\n"
        puts stderr "\t- MUMPS_ROOT"
        puts stderr "\t- MUMPS_INCDIR"
        puts stderr "\t- MUMPS_LIBDIR"
        puts stderr "\t- MUMPS_INCLUDEDIR"
        puts stderr "\t- MUMPS_LIBRARYDIR"
        puts stderr "\t- C_INCLUDE_PATH"
        puts stderr "\t- CPLUS_INCLUDE_PATH"
        puts stderr "\t- LIBRARY_PATH"
        puts stderr "\t- LD_LIBRARY_PATH"
}

module-whatis "sets up the environment for MUMPS 5.2.1 (System gcc-7.4.0-1ubuntu1~18.04.1)"
module-whatis "URL: http://mumps.enseeiht.fr/"

prereq openmpi/gcc/64/4.0.1

set pkghome /cm/shared/apps/mumps/gcc/$version

setenv MUMPS_ROOT $pkghome
setenv MUMPS_INCDIR $pkghome/include
setenv MUMPS_LIBDIR $pkghome/lib
setenv MUMPS_INCLUDEDIR $pkghome/include
setenv MUMPS_LIBRARYDIR $pkghome/lib

prepend-path C_INCLUDE_PATH $pkghome/include
prepend-path CPLUS_INCLUDE_PATH $pkghome/include
prepend-path LIBRARY_PATH $pkghome/lib
prepend-path LD_LIBRARY_PATH $pkghome/lib

unset pkghome

set MSG "MUMPS $version (System gcc-7.4.0-1ubuntu1~18.04.1)"
