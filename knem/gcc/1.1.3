#%Module
#
# knem 1.1.3 (System gcc-7.4.0)
#
#
set version 1.1.3

proc ModulesHelp { } {
	global version
        puts stderr "\tSets up the environment for knem $version (System gcc-7.4.0)\n"
        puts stderr "\t- KNEM_ROOT"
        puts stderr "\t- PATH"
        puts stderr "\t- CPATH"
}

module-whatis "High-Performance Intra-Node MPI Communication"
module-whatis "http://knem.gforge.inria.fr/"

set pkghome /cm/shared/apps/knem/gcc/$version
setenv KNEM_ROOT $pkghome
prepend-path PATH $pkghome/bin
prepend-path CPATH $pkghome/include
unset pkghome

set MSG "knem $version (System gcc-7.4.0-1ubuntu1~18.04.1)"
