#%Module
#
# pybind11 2.3.0 (System gcc-7.4.0)
#
#
set version 2.3.0

proc ModulesHelp { } {
	global version
        puts stderr "\tSets up the environment for pybind11 $version (System gcc-7.4.0)\n"
        puts stderr "\t- PYBIND11_ROOT"
        puts stderr "\t- PYBIND11_INCDIR"
        puts stderr "\t- PYBIND11_INCLUDEDIR"
        puts stderr "\t- C_INCLUDE_PATH"
        puts stderr "\t- CPLUS_INCLUDE_PATH"
}

module-whatis "Seamless operability between C++11 and Python"
module-whatis "https://github.com/pybind/pybind11"

set pkghome /cm/shared/apps/pybind11/gcc/$version

setenv PYBIND11_ROOT $pkghome
setenv PYBIND11_INCDIR $pkghome/include
setenv PYBIND11_INCLUDEDIR $pkghome/include

prepend-path C_INCLUDE_PATH $pkghome/include
prepend-path CPLUS_INCLUDE_PATH $pkghome/include

unset pkghome

set MSG "pybind11 $version (System gcc-7.4.0-1ubuntu1~18.04.1)"
