#%Module
#
# Eigen 3.3.7 (System gcc-7.4.0)
#
#
set version 3.3.7

proc ModulesHelp { } {
	global version
        puts stderr "\tSets up the environment for Eigen $version (System gcc-7.4.0)\n"
        puts stderr "\t- EIGEN_ROOT"
        puts stderr "\t- EIGEN3_ROOT"
        puts stderr "\t- EIGEN_INCLUDE_DIR"
        puts stderr "\t- EIGEN3_INCLUDE_DIR"
        puts stderr "\t- C_INCLUDE_PATH"
        puts stderr "\t- CPLUS_INCLUDE_PATH"
}

module-whatis "C++ template library for linear algebra"
module-whatis "http://eigen.tuxfamily.org/index.php?title=Main_Page"

set pkghome /cm/shared/apps/eigen/gcc/$version

setenv EIGEN_ROOT $pkghome
setenv EIGEN3_ROOT $pkghome
setenv EIGEN_INCLUDE_DIR $pkghome/include/eigen3
setenv EIGEN3_INCLUDE_DIR $pkghome/include/eigen3
prepend-path C_INCLUDE_PATH $pkghome/include/eigen3
prepend-path CPLUS_INCLUDE_PATH $pkghome/include/eigen3

unset pkghome

set MSG "Eigen $version (System gcc-7.4.0-1ubuntu1~18.04.1)"
