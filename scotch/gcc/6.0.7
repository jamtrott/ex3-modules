#%Module
#
# SCOTCH 6.0.7 (System gcc-7.4.0)
#
#
set version 6.0.7

proc ModulesHelp { } {
	global version
        puts stderr "\tSets up the environment for SCOTCH $version (System gcc-7.4.0)\n"
        puts stderr "\t- SCOTCH_ROOT"
        puts stderr "\t- SCOTCH_INCDIR"
        puts stderr "\t- SCOTCH_LIBDIR"
        puts stderr "\t- SCOTCH_INCLUDEDIR"
        puts stderr "\t- SCOTCH_LIBRARYDIR"
        puts stderr "\t- PATH"
        puts stderr "\t- C_INCLUDE_PATH"
        puts stderr "\t- CPLUS_INCLUDE_PATH"
        puts stderr "\t- LIBRARY_PATH"
        puts stderr "\t- LD_LIBRARY_PATH"
        puts stderr "\t- MANPATH"
}

module-whatis "Static Mapping, Graph, Mesh and Hypergraph Partitioning, and Parallel and Sequential Sparse Matrix Ordering Package"
module-whatis "https://www.labri.fr/perso/pelegrin/scotch/"

prereq openmpi/gcc/64/4.0.1

set pkghome /cm/shared/apps/scotch/gcc/$version

setenv SCOTCH_ROOT $pkghome
setenv SCOTCH_INCDIR $pkghome/include
setenv SCOTCH_LIBDIR $pkghome/lib
setenv SCOTCH_INCLUDEDIR $pkghome/include
setenv SCOTCH_LIBRARYDIR $pkghome/lib

prepend-path PATH $pkghome/bin
prepend-path C_INCLUDE_PATH $pkghome/include
prepend-path CPLUS_INCLUDE_PATH $pkghome/include
prepend-path LIBRARY_PATH $pkghome/lib
prepend-path LD_LIBRARY_PATH $pkghome/lib
prepend-path MANPATH $pkghome/share/man

unset pkghome

set MSG "SCOTCH $version (System gcc-7.4.0-1ubuntu1~18.04.1)"
