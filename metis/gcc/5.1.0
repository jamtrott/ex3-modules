#%Module
#
# METIS 5.1.0 (System gcc-7.4.0)
#
#
set version 5.1.0

proc ModulesHelp { } {
	global version
        puts stderr "\tSets up the environment for METIS $version (System gcc-7.4.0)\n"
        puts stderr "\t- METIS_ROOT"
        puts stderr "\t- METIS_INCDIR"
        puts stderr "\t- METIS_LIBDIR"
        puts stderr "\t- METIS_INCLUDEDIR"
        puts stderr "\t- METIS_LIBRARYDIR"
        puts stderr "\t- PATH"
        puts stderr "\t- C_INCLUDE_PATH"
        puts stderr "\t- CPLUS_INCLUDE_PATH"
        puts stderr "\t- LIBRARY_PATH"
        puts stderr "\t- LD_LIBRARY_PATH"
}

module-whatis "sets up the environment for METIS 5.1.0 (System gcc-7.4.0-1ubuntu1~18.04.1)"

set pkghome /cm/shared/apps/metis/gcc/$version

setenv METIS_ROOT $pkghome
setenv METIS_INCDIR $pkghome/include
setenv METIS_LIBDIR $pkghome/lib
setenv METIS_INCLUDEDIR $pkghome/include
setenv METIS_LIBRARYDIR $pkghome/lib

prepend-path PATH $pkghome/bin
prepend-path C_INCLUDE_PATH $pkghome/include
prepend-path CPLUS_INCLUDE_PATH $pkghome/include
prepend-path LIBRARY_PATH $pkghome/lib
prepend-path LD_LIBRARY_PATH $pkghome/lib

unset pkghome

set MSG "METIS $version (System gcc-7.4.0-1ubuntu1~18.04.1)"
