#%Module
#
# numactl 2.0.12 (System gcc-7.4.0)
#
#
set version 2.0.12

proc ModulesHelp { } {
	global version
        puts stderr "\tSets up the environment for numactl $version (System gcc-7.4.0)\n"
        puts stderr "\t- NUMACTL_ROOT"
        puts stderr "\t- NUMACTL_BASE"
        puts stderr "\t- NUMACTL_INCDIR"
        puts stderr "\t- NUMACTL_LIBDIR"
        puts stderr "\t- NUMACTL_INCLUDEDIR"
        puts stderr "\t- NUMACTL_LIBRARYDIR"
        puts stderr "\t- PATH"
        puts stderr "\t- C_INCLUDE_PATH"
        puts stderr "\t- CPLUS_INCLUDE_PATH"
        puts stderr "\t- LIBRARY_PATH"
        puts stderr "\t- LD_LIBRARY_PATH"
        puts stderr "\t- MANPATH"
}

module-whatis "NUMA support for Linux"
module-whatis "https://github.com/numactl/numactl"

set pkghome /cm/shared/apps/numactl/gcc/$version

setenv NUMACTL_ROOT $pkghome
setenv NUMACTL_BASE $pkghome
setenv NUMACTL_INCDIR $pkghome/include
setenv NUMACTL_LIBDIR $pkghome/lib
setenv NUMACTL_INCLUDEDIR $pkghome/include
setenv NUMACTL_LIBRARYDIR $pkghome/lib

prepend-path PATH $pkghome/bin
prepend-path C_INCLUDE_PATH $pkghome/include
prepend-path CPLUS_INCLUDE_PATH $pkghome/include
prepend-path LIBRARY_PATH $pkghome/lib
prepend-path LD_LIBRARY_PATH $pkghome/lib
prepend-path MANPATH $pkghome/share/man

unset pkghome

set MSG "numactl $version (System gcc-7.4.0-1ubuntu1~18.04.1)"
